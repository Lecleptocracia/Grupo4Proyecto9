<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDD896"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvwMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona tu menú:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#8B4621"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.075" />

    <ImageView
        android:id="@+id/imgCassoulet"
        android:layout_width="204dp"
        android:layout_height="136dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvwMenu"
        app:layout_constraintVertical_bias="0.12"
        app:srcCompat="@drawable/cassoulet" />

    <ImageView
        android:id="@+id/imgGraten"
        android:layout_width="206dp"
        android:layout_height="137dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCassoulet"
        app:layout_constraintVertical_bias="0.166"
        app:srcCompat="@drawable/graten" />

    <ImageView
        android:id="@+id/imgRatatouille"
        android:layout_width="207dp"
        android:layout_height="138dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgGraten"
        app:layout_constraintVertical_bias="0.488"
        app:srcCompat="@drawable/ratatouille" />

    <TextView
        android:id="@+id/tvwGraten"
        android:layout_width="146dp"
        android:layout_height="44dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Gratén Delfinés"
        android:textAlignment="center"
        android:textColor="#3F6319"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvwGratenPrecio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imgGraten"
        app:layout_constraintStart_toStartOf="@+id/imgGraten"
        app:layout_constraintTop_toBottomOf="@+id/tvwCassouletPrecio"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvwCassouletPrecio"
        android:layout_width="146dp"
        android:layout_height="44dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="444dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="$27.000"
        android:textAlignment="center"
        android:textColor="#27180F"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvwRatatouillePrecio"
        android:layout_width="146dp"
        android:layout_height="44dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="72dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="$19.800"
        android:textAlignment="center"
        android:textColor="#27180F"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvwRatatouille"
        android:layout_width="146dp"
        android:layout_height="44dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Ratatouille"
        android:textAlignment="center"
        android:textColor="#3F6319"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvwRatatouillePrecio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toEndOf="@+id/imgRatatouille"
        app:layout_constraintTop_toBottomOf="@+id/tvwGratenPrecio"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvwGratenPrecio"
        android:layout_width="146dp"
        android:layout_height="44dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="256dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="$32.500"
        android:textAlignment="center"
        android:textColor="#27180F"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvwCassoulet"
        android:layout_width="143dp"
        android:layout_height="35dp"
        android:layout_marginStart="41dp"
        android:inputType="textPersonName"
        android:text="Cassoulet"
        android:textAlignment="center"
        android:textColor="#3F6319"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvwCassouletPrecio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.894"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.966" />

</android.support.constraint.ConstraintLayout>